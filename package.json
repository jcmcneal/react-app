{
    "name": "react-app",
    "version": "1.0.0",
    "author": "Jason McNeal",
    "description": "React UI & Node API",
    "scripts": {
        "start": "node dist/static/server.min.js",
        "dev": "webpack-dev-server --open --mode='development' --hotOnly --config webpack.server.js",
        "dev:server": "nodemon --watch src/Server --exec 'yarn build:api && yarn start'",
        "build": "export NODE_ENV=production; webpack --progress --optimize-minimize --mode=production",
        "build:api": "webpack --progress --optimize-minimize --mode=production --config webpack.api.js",
        "test": "jest --watch --config=jest.config.json",
        "lint": "eslint src/"
    },
    "license": "MIT",
    "devDependencies": {
        "@babel/cli": "^7.0.0",
        "@babel/core": "^7.0.1",
        "@babel/plugin-proposal-class-properties": "^7.1.0",
        "@babel/preset-env": "^7.0.0",
        "@babel/preset-react": "^7.0.0",
        "babel-core": "^7.0.0-bridge.0",
        "babel-eslint": "^9.0.0",
        "babel-jest": "^23.4.2",
        "babel-loader": "^8.0.0",
        "babel-plugin-transform-react-remove-prop-types": "^0.4.20",
        "css-loader": "^1.0.0",
        "eslint": "^5.5.0",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-import-resolver-webpack": "^0.11.1",
        "eslint-loader": "^2.1.0",
        "eslint-plugin-babel": "^5.2.0",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-react": "^7.11.1",
        "file-loader": "^3.0.1",
        "html-webpack-plugin": "^3.2.0",
        "jest": "^23.6.0",
        "less": "^3.8.1",
        "less-loader": "^4.1.0",
        "mini-css-extract-plugin": "^0.5.0",
        "nodemon": "^1.19.0",
        "react-hot-loader": "^4.3.11",
        "style-loader": "^0.23.1",
        "uglifyjs-webpack-plugin": "^2.1.1",
        "webpack": "^4.18.1",
        "webpack-bundle-analyzer": "^3.0.3",
        "webpack-cli": "^3.1.0",
        "webpack-dev-server": "^3.1.9"
    },
    "dependencies": {
        "bootstrap": "^4.2.1",
        "dotenv": "^6.2.0",
        "express": "^4.17.0",
        "react": "^16.7.0",
        "react-dom": "^16.7.0"
    }
}
